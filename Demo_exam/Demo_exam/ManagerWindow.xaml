<Window x:Class="Demo_exam.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_exam"
        mc:Ignorable="d"
        Title="Окно менеджера" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.ColumnSpan="4" Background="#B3F4E9">
            <Label Content="Окно менеджера" HorizontalAlignment="Center" FontSize="18"/>
        </StackPanel>
        <Button x:Name="ViewProduct" Grid.Row="1" Grid.Column="0" Width="200" Content="Посмотреть продукты"  FontSize="15"></Button>
        <Button x:Name="FormOrders" Grid.Row="1" Grid.Column="1" Width="200" Content= "Формировать заказы"  FontSize="15"></Button>
        <Button x:Name="ViewOrders" Grid.Row="1" Grid.Column="2" Width="200" Content="Редактировать заказ"  FontSize="15"></Button>

    </Grid>
</Window>
